doctype html
html(lang='es')
  head
    meta(charset='utf-8')
    title= title

    link(rel="stylesheet", href="stylesheets/bootstrap.css")

  body
    div(class="container")
      h1(class="text-center") Chat Simple Node+Socket+Express+Mysql
      
      div(class="row")
        div(class="col-xs-4")
          form(action='')
            div(class="form-group")
              label(for="username") Usuario
              input(type="text", id="username", class="form-control", data-bind="value: newUsername")

            div(class="form-group")
              label(for="message") Mensaje
              textarea(name="message", cols="10", rows="5", id="message", class="form-control", data-bind="value: newMessage")
            
            button(type="button", id="send-message", class="btn btn-primary", data-bind="click: sendMessage") Enviar Mensaje

        div(class="col-xs-8")
          h2 Mensajes
          ul(id="messages",data-bind="foreach: messages")
            li
              strong(data-bind="text: username +': '") 
              strong(data-bind="text: body")

    script(src="javascripts/jquery.js")
    script(src="javascripts/bootstrap.js")
    script(src="javascripts/knockout.js")
    script(src="/socket.io/socket.io.js")

    //Script de la aplicaci√≥n logica de socket
    script(src="javascripts/app.js")
      
     
