extends ../template/layout
block content

  if(sinDatos == undefined)
    div(class=["container-fluid"])
      div(class="jumbotron")
        button(class=["btn","btn-raised","btn-default"]) Iniciar Juego

        div(class="row")
          div(class="col-md-12")
            h2(class="text-center") Participantes en Línea
          
          div(class="col-md-12")
            h3(class="text-center") 
              strong=  data[0].CantidadParticipantes
            
          div(class="col-md-6 col-md-offset-3")
            table(class="table")
              thead
                tr
                  th(class="text-center active") CARNE
                  th(class="text-center active") NOMBRE

            
              tbody
                each datos in data
                  tr
                    td(class="text-center")= datos.carne
                    td(class="text-center")= datos.nombre
  
  else
    div(class=["container-fluid"])
      div(class="jumbotron")
        button(class=["btn","btn-raised","btn-default"]) Iniciar Juego

        div(class="row")
          div(class="col-md-12")
            h2(class="text-center") No hay Participantes en Línea
          
          div(class="col-md-12")
            h3(class="text-center") 
              strong=  0
            
          div(class="col-md-6 col-md-offset-3")
            table(class="table")
              thead
                tr
                  th(class="text-center active") CARNE
                  th(class="text-center active") NOMBRE                      