extends layout.pug
block content    
    section(class=['app-login'])
        div.container
            h1= title
            p Sube tu video para que el UMGteam vea tu trabajo!!
    div.container
        div.row
            div(class=['col-xs-12','col-sm-8','col-sm-offset-2','col-md-6','col-md-offset-3'])
                if(message)
                    br
                    div(role="alert").alert.alert-success
                        button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                            span(aria-hidden="true") &times;
                        strong #{message}
                if(error)
                    br
                    div(role="alet").alert.alert-danger
                        button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                            span(aria-hidden="true") &times;
                        strong #{error}
                br
                div.panel.panel-default
                    div.panel-body
                        form(method="post", action="/login")
                            div.form-group
                                label Correo Electronico:
                                div.input-group
                                    span(class=['input-group-addon']) @                                        
                                    input(type="email", class=['form-control'], id="email", name="email", placeholder="ejemplo@miumg.edu.gt", required)
                            div.form-group
                                label Contraseña:
                                div.input-group
                                    span(class=['input-group-addon'])
                                        span(class=['glyphicon','glyphicon-asterisk'])
                                    input(type="password", class=['form-control'], id="password", name="password", placeholder="Contraseña", required)
                                    span(class=['input-group-btn'])
                                        button(class=['btn', 'btn-default','active'], type="button", id="show_pass")
                                            span(class=['glyphicon','glyphicon-eye-open'], id="icon_eye")
                        
                            input(type="submit", id='btn_continue' disabled, class=['btn','btn-login'] value="Identificate")
                    div.panel-footer
                        span ¿No tienes una cuenta?  
                        a(href="/signin", class=['btn','btn-signin']) Crear Cuenta
    footer(class=['app-footer','navbar-fixed-bottom'])
            div.container
                p Derechos Reservados @TeamUMG