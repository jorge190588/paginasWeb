extends layout.pug
block content
    include templates/nav
    section(class="app-subirvideo")
        div.container
            div.row
                div(class=['hidden-xs','col-sm-6'])
                    div(class=['app-datos'])
                        div(class=['gl-usuario'])
                            span(class=['glyphicon glyphicon-user'])
                            span  Conectados: 
                                span(id="usuarios_conectados" class="badge")
                        div(class=['gl-archivos'])
                            span(class=['glyphicon glyphicon-upload'])
                            span  Publicaciones: 
                                span(id="videos_subidos" class="badge")
                div(class=['col-xs-12','col-sm-offset-2','col-sm-4'])
                    a.button.add(href="/agregar", type="button", class=['btn','btn-subirvideo','btn-block','btn-lg']) Subir video
    div.container
        br
        div.row
            div(class=['col-xs-12','col-sm-9','col-md-9'])
                input(type="search", class=['form-control'], placeholder="Buscar...")
                br
                div(class=['list-group'])
                    if(data.length != 0)
                        each video in data
                            a(class=['list-group-item'], href="/detalles/" + video.id)
                                div.row
                                    div(class=['col-xs-12','col-sm-12','col-md-12'])
                                        span Fecha de publicación: #{video.fecha_publicacion}
                                        br
                                        br
                                    div(class=['col-xs-12','col-sm-12','col-md-12'])
                                        div(class=["col-xs-12", "col-sm-3"])
                                            figure
                                                img(src=`https://i.ytimg.com/vi/${video.url}/0.jpg`, width="150" alt="Portada", class=['media-object','img-responsive','app-img-centrar'])
                                        div(class=["col-xs-12", "col-sm-9"])
                                            div(class=['col-xs-12'])
                                                p(class=['app-justificar']) #{video.descripcion}
                                            div(class=['hidden-xs','col-sm-12','app-iconos'])
                                                div(class=['col-sm-4'])
                                                    span(class=['glyphicon','glyphicon-eye-open','gl-vistas'])
                                                    span  Vistas 
                                                    span(class=['badge']) #{video.visitas}
                                                div(class=['col-sm-4'])
                                                    span(class=['glyphicon','glyphicon-comment','gl-comentarios'])
                                                    span  Comentarios 
                                                    - var comentarios = video.comentarios
                                                    if(comentarios == null)
                                                        span(class=['badge']) 0
                                                    else
                                                        span(class=['badge']) #{video.comentarios}
                                                div(class=['col-sm-4'])
                                                    span(class=['glyphicon','glyphicon-star','gl-votos'])
                                                    span  Votos 
                                                    - var votos = video.votos
                                                    if(votos == null)
                                                        span(class=['badge']) 0
                                                    else
                                                        span(class=['badge']) #{video.votos} 
                                    div(class=['col-xs-12','app-etiquetas'])
                                        div(class=['hidden-xs','col-sm-3'])
                                            p(class=['app-centrar']) Título
                                        div(class=['col-xs-12','col-sm-9'])
                                            span(class=['label','label-etiqueta']) #{video.titulo}
                    else
                        div(role="alert").alert.alert-danger No hay registros en la base de datos.
            div(class=['col-xs-12','col-sm-3','col-md-3'])
                div.panel.panel-info
                    div.panel-heading Categorías
                    div.panel-body
                        ul(class=['nav','nav-pills','nav-stacked'])
                            li(role="presentation", class="active")
                                a(href="#") Todas
                            li(role="presentation")
                                a(href="#") Algoritmos
                            li(role="presentation")
                                a(href="#") Base de datos
                div.panel.panel-danger
                    div.panel-heading 
                        strong TOP 5 de los mas vistos
                    div.panel-body
                        div.alert.alert-info
                            p Titulo uno
                        div.alert.alert-info
                            p Titulo dos
                        div.alert.alert-info
                            p Titulo tres
                        div.alert.alert-info
                            p Titulo cuatro
                        div.alert.alert-info
                            p Titulo cinco